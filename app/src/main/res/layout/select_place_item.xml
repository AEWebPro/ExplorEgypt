<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cyanWhite"
    android:foreground="?attr/selectableItemBackground">

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/item_select_image_view"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        app:riv_corner_radius="30dip"
        app:riv_border_width="1dip"
        app:riv_border_color="@color/cyanDark"
        app:riv_mutate_background="true"
        app:riv_oval="true"
        android:layout_marginTop="15dp"
        android:padding="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_select_place_title"
        android:text="temp title"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        style="@android:style/TextAppearance"
        android:layout_toEndOf="@id/item_select_image_view"
        android:paddingStart="20dp"
        android:layout_marginTop="50dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/item_select_image_view"
        android:background="?android:attr/listDivider"
        android:paddingBottom="2dp"/>
</RelativeLayout>