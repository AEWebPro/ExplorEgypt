<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/categories_card_title"
        android:text="place"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/gray_500"
        android:background="@drawable/text_frame"
        android:elevation="11dp"
        app:layout_constraintTop_toTopOf="@+id/categories_card_image"
        android:layout_marginTop="115dp"
        android:layout_marginRight="39dp"
        app:layout_constraintRight_toRightOf="@+id/categories_card_image" />

        <ImageView
            android:id="@+id/categories_card_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/nightclub"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_marginLeft="25dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp" />


</android.support.constraint.ConstraintLayout>