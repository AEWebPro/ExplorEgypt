<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ae.smartvisit">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".infrastructure.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.HomeActivity" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.LoginActivity" android:theme="@style/AppTheme.Dark" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.Services" android:theme="@style/AppTheme.Dark" />
        <activity android:name=".activities.DetailView" android:theme="@style/AppTheme.Dark" />
        <activity android:name=".activities.Transport" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.Hospitals" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.Currency" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.Embassy" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.Planes" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.YourPlanes" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.RecommandA" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.RecommandPrograms" android:theme="@style/AppTheme.Dark"/>
        <activity android:name=".activities.YourPlanesA" android:theme="@style/AppTheme.Dark"></activity>


        <activity
            android:name=".activities.Signup"
            android:theme="@style/AppTheme.Dark" />
    </application>

</manifest>